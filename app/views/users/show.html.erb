<body>
<h2>Welcome, <%= @user.username.capitalize %>!</h2>
<h3>Your <%= @user.trips.count %> trips:</h3>

<% @user.trips.each do |trip| %>
<h3><%=link_to trip.name, user_trip_path(@user, trip) %>-<%= trip.date %></h3>
<% end %>

<br>
<%= link_to 'Add Trip', new_user_trip_path(@user, @trip) %><br>
<br>
<%= link_to 'All Adventures', user_places_path(current_user, @path) %><br>

<%= render 'layouts/footer' %>
</body>
